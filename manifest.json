{
    "manifest_version": 2,
    "name":    "work",
    "description": "download invitelist",
    "version": "0.0",

    "background": {
        "persistent": false,
        "scripts": [
          "include/util.js",
          "inject/background.js"
        ]
    },
    "content_scripts": [
      {
        "matches": ["*://login.taobao.com/*"],
        "js":      [
          "inject/login.taobao.js"
        ],
        "run_at":  "document_end"
      },
      {
        "matches": ["*://mai.taobao.com/*"],
        "js":      [
          "inject/mai.taobao.js"
        ],
        "run_at":  "document_start"
      },
      {
        "matches": ["*://alisec.tmall.com/*"],
        "js":      [
          "inject/alisec.tmall.js"
        ]
      },
      {
        "matches": ["*://qudao.gongxiao.tmall.com/*"],
        "js":      [
          "include/jquery-1.11.3.min.js",
          "include/util.js",
          "inject/qudao.gongxiao.tmall.js"
        ],
        "run_at":  "document_end"
      }
    ],
    "browser_action": {
        "default_title": "Test Extension"
    },

    "permissions": [
      "tabs",
      "activeTab",
      "downloads",
      "<all_urls>",
      "https://*/*",
      "http://*/*"
    ]
}
