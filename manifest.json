{
    "manifest_version": 2,
    "name":    "供销数据爬虫",
    "description": "点击插件按钮即开始爬取，请勿关闭浏览器。遇到程序异常关掉其它页面，重点一次插件按钮即可",
    "version": "1.0",

    "background": {
        "persistent": false,
        "scripts": [
          "include/util.js",
          "background.js"
        ]
    },
    "content_scripts": [
      {
        "matches": ["*://login.taobao.com/*"],
        "js":      [
          "inject/login.taobao.js"
        ],
        "run_at":  "document_end"
      },
      {
        "matches": ["*://mai.taobao.com/*"],
        "js":      [
          "inject/mai.taobao.js"
        ],
        "run_at":  "document_start"
      },
      {
        "matches": ["*://gongxiao.tmall.com/*"],
        "js":      [
          "inject/gongxiao.tmall.js"
        ],
        "run_at":  "document_start"
      },
      {
        "matches": ["*://qudao.gongxiao.tmall.com/*"],
        "js":      [
          "include/jquery-1.11.3.min.js",
          "include/util.js",
          "inject/qudao.gongxiao.tmall.js"
        ],
        "run_at":  "document_end"
      }
    ],
    "browser_action": {
        "default_title": "供销爬数据插件"
    },

    "permissions": [
      "tabs",
      "activeTab",
      "downloads",
      "<all_urls>",
      "https://*/*",
      "http://*/*"
    ]
}
